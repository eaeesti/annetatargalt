{
  "kind": "collectionType",
  "collectionName": "organizations",
  "info": {
    "singularName": "organization",
    "pluralName": "organizations",
    "displayName": "Organization",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "unique": true,
      "required": false
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "component": "meta.metadata"
    },
    "fund": {
      "type": "boolean",
      "default": false
    },
    "homepage": {
      "type": "string"
    },
    "introduction": {
      "type": "richtext"
    },
    "content": {
      "type": "richtext"
    },
    "cause": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cause.cause",
      "inversedBy": "organizations"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "internalId": {
      "type": "string",
      "unique": true,
      "required": true,
      "maxLength": 64,
      "regex": "^[A-Z0-9_-]+$"
    },
    "organizationDonations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::organization-donation.organization-donation",
      "mappedBy": "organization"
    },
    "organizationRecurringDonations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::organization-recurring-donation.organization-recurring-donation",
      "mappedBy": "organization"
